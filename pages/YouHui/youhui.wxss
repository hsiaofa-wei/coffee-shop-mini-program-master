.status-container {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}
.status-item {
  padding: 5px 10px;
  border-radius: 5px;
  color: #333;
}
.status-item.active {
  color: green;
}
.coupon-list {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}
.coupon-item {
  display: flex;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 15px;
  margin-bottom: 10px;
  background-color: #f5f5f5;
}
.left-column {
  flex: 1;
  border-right: 1px solid #ddd;
  padding-right: 15px;
}
.right-column {
  flex: 1;
  padding-left: 15px;
}
.amount {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 5px;
}
.threshold {
  color: #333;
  margin-bottom: 15px;
}
.valid-date {
  color: #999;
  font-size: 14px;
}
.type-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.type-label {
  background-color: #ccc;
  color: white;
  display: inline-block;
  padding: 2px 6px;
  border-radius: 2px;
  margin-right: 5px;
  font-size: 10px;
}
.type-name {
  color: #333;
  font-size: 16px;
}
.status {
  background-color: #e0e0e0;
  border-radius: 10px;
  padding: 5px 12px;
  display: inline-block;
  color: #333;
  margin-top: 20px;
}    