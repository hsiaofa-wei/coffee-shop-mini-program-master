.tab{
  width: 200rpx;
  height: 60rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid black;
}
.tab.active{
  background-color: #22A4B0;
}
.order-frame{
  width: 700rpx;
  height: auto;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  margin-left: 25rpx;
}
.order-top{
  width: 700rpx;
  height: 80rpx;
  position: relative;
}
.order-type{
  position: absolute;
  width: 150rpx;
  height: 50rpx;
  margin-top: 18rpx;
  margin-left: 20rpx;
  background-color: #22A4B0;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.order-name{
  position: absolute;
  width: 240rpx;
  height: 50rpx;
  margin-top: 18rpx;
  margin-left: 180rpx;
  font-weight:600;
  font-size: 30rpx;
}
.order-state{
  position: absolute;
  width: 100rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-left: 570rpx;
}
.order-bottom{
  width: 700rpx;
  height: 200rpx;
  position: relative;
}
.order-image{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  margin-top: -5rpx;
  margin-left: 25rpx;
}
