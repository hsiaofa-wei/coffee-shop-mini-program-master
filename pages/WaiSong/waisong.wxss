.header{
  display: flex;
  box-sizing:border-box;
  padding: 0rpx 15rpx;
  align-items: center;          /* 垂直居中 */
  width: 100%;                 /* 确保容器有宽度 */
  margin-top: 20px;
}
.left-header{
  display: flex;
  margin-right: auto;
}
.right-header{
  margin-left: auto;
}
.deliveryWay {
  display: flex;
  width: 300rpx;
  height: 72rpx;
  border-radius: 35rpx;
  border: 1px solid #d3d3d3; /* 边框宽度 样式 颜色 */
}
.deliverySelet {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  background-color: #51a2ae;
  margin: 8rpx 8rpx;
  height: 58rpx;
  border-radius: 35rpx;
  color: #ffffff;
  font-size: 26rpx;/* 字体大小 */
  z-index: 1;
  transition: all 0.3s ease;
}

.deliveryNon {
  color: #000000;
  font-size: 26rpx;/* 字体大小 */
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}

/* 滑动指示器效果 */
.delivery-selector::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background-color: #1989fa;
  border-radius: 40rpx;
  transition: all 0.3s ease;
  z-index: 0;
}

.delivery-selector[data-active="1"]::after {
  left: 50%;
}
.main-container {
  display: flex;
  flex-direction: column;
  margin-top: 30px;
}
.address-item {
  display: flex;
  justify-content: space - between;
  align-items: center;
  background-color: white;
  border: 1px solid #eaeaea;
  border-radius: 5px;
  padding: 15px;
  margin-bottom: 10px;
}
.left-section {
  display: flex;
  flex-direction: column;
}
.address-top {
  font-size: 13px;
  color: #333;
}
.address-bottom {
  display: flex;
  align-items: center;
  margin-top: 7px;
}
.default-tag {
  background-color: #ff9900;
  color: white;
  padding: 3px 8px;
  border-radius: 3px;
  margin-right: 10px;
  font-size: 13px;
}
.name-phone {
  display: flex;
  align-items: center;
}
.name {
  font-size: 13px;
  color: #666;
  margin-right: 25px;
}
.phone {
  font-size: 13px;
  color: #666;
}
.right-section {
  width: 20px; /* 根据实际图标大小调整 */
  height: 20px; /* 根据实际图标大小调整 */
  
}
.edit-icon {
  width: 100%;
  height: 100%;
  margin-left: 50px;
}
.add-address-button {
  background-color: #4db6ac;
  color: white;
  padding: 10px 15px;
  border-radius: 10px;
  text-align: center;
  margin-top: 275px;
}
.button-text {
  font-size: 16px;
}